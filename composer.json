{
    "name": "silverstripe/controllerpolicy",
    "description": "SilverStripe module providing a framework for per-controller policies. Includes a caching policy implementation that's more flexible than the Framework's default.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "policy",
        "caching"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Mateusz Uzdowski",
            "email": "mateusz@silverstripe.com"
        }
    ],
    "require": {
        "silverstripe/framework": "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\ControllerPolicy\\": "src/",
            "SilverStripe\\ControllerPolicy\\Tests\\": "tests/"
        }
    },
    "extra": [],
    "minimum-stability": "dev",
    "prefer-stable": true
}